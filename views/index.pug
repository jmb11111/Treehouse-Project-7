extends layout
block main
  .app--tweet
    form
      .circle--fluid
        .circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
          .app--avatar(style='background-image: url(static/images/m-spore.png)')
            img(src='static/images/m-spore.png')
          textarea#tweet-textarea.circle--textarea--input(placeholder="What's happening?")
          strong#tweet-char.app--tweet--char 140
        .circle--fluid--cell.align-bottom
          button.button-primary Tweet
  .bounds.app--body
    .app--section--header
      .grid-33
        .app--section--heading
          h2 Timeline
      .grid-33
        .app--section--heading
          strong= following
          h2 Following
      .grid-33
        .app--section--heading
          h2 Direct Messages
    .grid-33
      .app--section
        include tweetList.pug
    .grid-33
      .app--section
        include followerList.pug
    .grid-33
      .app--section
        ul.app--message--list
          li
            h3
              | Conversation with 
              a Jill Spore
            ul.app--message--conversation
              li.app--message
                .app--avatar(style='background-image: url(static/images/f-spore.png)')
                  img(src='static/images/f-spore.png')
                p.app--message--text How are things?
                p.app--message--timestamp 3 hours ago
              li.app--message--me
                .app--avatar(style='background-image: url(static/images/m-spore.png)')
                  img(src='static/images/m-spore.png')
                p.app--message--text
                  | Great! How about you? Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                p.app--message--timestamp 2 hours ago
              li.app--message
                .app--avatar(style='background-image: url(static/images/f-spore.png)')
                  img(src='static/images/f-spore.png')
                p.app--message--text Fantastic! You wanna grab lunch?
                p.app--message--timestamp 2 hours ago
              li.app--message--me
                .app--avatar(style='background-image: url(static/images/m-spore.png)')
                  img(src='static/images/m-spore.png')
                p.app--message--text Totes mcgotes. How about Mackey&apos;s?
                p.app--message--timestamp 1 hour ago
              li.app--message
                .app--avatar(style='background-image: url(static/images/f-spore.png)')
                  img(src='static/images/f-spore.png')
